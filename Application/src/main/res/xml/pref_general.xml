<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_group_body"
        android:key="pref_key_body_settings">

        <EditTextPreference
            android:key="dev_conf_goal"
            android:title="@string/pref_device_body_goal"
            android:defaultValue="1000"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLines="1" />

        <EditTextPreference
            android:key="dev_conf_weight"
            android:title="@string/pref_device_body_weight"
            android:defaultValue="70"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLines="1" />

        <EditTextPreference
            android:key="dev_conf_height"
            android:title="@string/pref_device_body_height"
            android:defaultValue="180"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLines="1" />

        <EditTextPreference
            android:key="dev_conf_age"
            android:title="@string/pref_device_body_age"
            android:defaultValue="26"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLines="1" />

        <ListPreference
            android:key="dev_conf_gender"
            android:title="@string/pref_device_body_gender"
            android:defaultValue="0"
            android:entries="@array/pref_device_body_gender_titles"
            android:entryValues="@array/pref_device_body_gender_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_group_device"
        android:key="pref_key_body_settings">
        <CheckBoxPreference
            android:key="dev_conf_gesture"
            android:title="@string/pref_device_gesture"
            android:summary="@string/pref_device_gesture_desc"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="dev_conf_light"
            android:title="@string/pref_device_light"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="dev_conf_autosleep"
            android:title="@string/pref_device_auto_sleep"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="dev_conf_use24hours"
            android:title="@string/pref_device_use24hours"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="dev_conf_englishunits"
            android:title="@string/pref_device_english_units"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="dev_conf_ble"
            android:title="@string/pref_device_ble"
            android:summary="@string/pref_device_ble_desc"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_group_notif"
        android:key="pref_key_body_settings">

        <CheckBoxPreference
            android:key="notif_foreign"
            android:title="@string/pref_notif_foreign"
            android:summary="@string/pref_notif_foreign_desc"
            android:defaultValue="false" />

        <EditTextPreference
            android:key="notif_delay"
            android:title="@string/pref_notif_delay"
            android:summary="@string/pref_notif_delay_desc"
            android:defaultValue="0"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLines="1" />

    </PreferenceCategory>
</PreferenceScreen>
